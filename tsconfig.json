{
  "compilerOptions": {
    "removeComments": false,
    "outDir": "build",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2021"
    ],
    "sourceMap": true,
    "checkJs": false,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "*"
      ]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.js",
    "src/**/*.jsx"
  ]
}